{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2020-02-14",
    "location": "East US",
    "dependsOn": [],
    "tags": {},
    "identity": {
        "type": "UserAssigned",
        "userAssignedIdentities": {
            "/subscriptions/something/resourcegroups/OpenFOAMDemo/providers/Microsoft.ManagedIdentity/userAssignedIdentities/builderId": {}
        }
    },
    "properties": {
        "buildTimeoutInMinutes": 90,
        "vmProfile": {
            "vmSize": "Standard_HB120rs_v3"
        },
        "source": {
            "type": "PlatformImage",
            "publisher": "canonical",
            "offer": "0001-com-ubuntu-server-focal",
            "sku": "20_04-lts",
            "version": "latest"
        },
        "customize": [
            {
                "type": "Shell",
                "name": "Install Upgrades",
                "inline": [
                    "sudo apt install unattended-upgrades"
                ]
            },
            {
                "type": "Shell",
                "name": "Prep Repos",
                "inline": [
                    "sudo curl -L https://dl.openfoam.com/pubkey.gpg 2>/dev/null | gpg --dearmor > /etc/apt/trusted.gpg.d/openfoam.gpg",
                    "sudo echo 'deb [trusted=yes] https://dl.openfoam.com/repos/deb $RELEASE main' > /etc/apt/sources.list.d/openfoam.repo"
                ]
            },
            {
                "type": "Shell",
                "name": "Get AzCopy",
                "inline": [
                    "sudo wget -O - https://aka.ms/downloadazcopy-v10-linux | gunzip - | tar xfo - --wildcards --no-anchored --strip-components 1 --directory /usr/sbin azcopy",
                    "sudo chmod 755 /usr/sbin/azcopy"
                ]
            },
            {
                "type": "Shell",
                "name": "Packages",
                "inline": [
                    "sudo apt-get install make g++ net-tools infiniband-diags ibutils ibverbs-utils openfoam2012-default slurmd slurm-client slurmctld"
                ]
            },
            {
                "type": "Shell",
                "name": "Slurm configuration folder",
                "inline": [
                    "sudo mkdir /etc/slurm-llnl/"
                ]
            },
            {
                "type": "File",
                "name": "slurm.conf",
                "sourceUri": "https://github.com/MikeBazMSFT/openfoambicep/blob/main/slurm.conf.example",
                "destination": "/etc/slurm-llnl/slurm.conf"
            },
            {
                "type": "Shell",
                "name": "Slurm configuration folder",
                "inline": [
                    "sudo mkdir /etc/slurm-llnl/"
                ]
            },
            {
                "type": "Shell",
                "name": "Slurm demon setup",
                "inline": [
                    "sudo systemctl disable --now slurmctld",
                    "sudo systemctl disable --now slurmd",
                    "sudo chown slurm:slurm /var/spool/slurm",
                    "sudo chown slurm:slurm /etc/slurm-llnl/slurm.conf"
                ]
            }
        ],
        "distribute": [
            {
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/resourcegroups/OpenFOAMDemo/providers/Microsoft.Compute/galleries/OpenFoamRepo/images/workerNode",
                "runOutputName": "OpenFOAMDemoImage",
                "artifactTags": {
                    "source": "azureVmImageBuilder",
                    "baseosimg": "ubuntu2004"
                },
                "replicationRegions": [
                    "eastus"
                ]
            }
        ]
    }
}